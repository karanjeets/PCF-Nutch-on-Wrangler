NUTCH_PATH="$1"
CRAWL_PATH="$2"
OUTPUTDIR="$3"
SEGMENT="$4"

TEAM="NASAJPL"
CRAWLER="Apache-Nutch"
OUT_JSON="output.json"

${NUTCH_PATH} commoncrawldump -segment "$CRAWL_PATH"/segments/$SEGMENT -outputDir "$OUTPUTDIR"/$SEGMENT
#/usr/bin/python memex_cca_esindex.py -t $TEAM -c $CRAWLER -d "$OUTPUTDIR"/"$SEGMENT"/ -p OUT_JSON
